<div class="col-md-4 col-md-offset-4">
    <h2>編輯討論版</h2>

    <hr>
    <%= form_for @post do |f| %>
    <% if @post.errors.any? %>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
    <% end %>
    標題
    <%= f.text_field :title %>
    <br>
    敘述
    <br>
    <%= f.text_area :description %>
    <br>

    <%= f.submit "Submit", :disable_with => 'Submiting...' %>
    <% end %>

</div>
